<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dbdfe8"
        xmlns:card_view="http://schemas.android.com/apk/res-auto">
        <android.support.v4.view.ViewPager
            android:id="@+id/vpPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/rpJoin"
            />
        <com.andexert.library.RippleView
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:rv_color="@android:color/white"
            card_view:rv_centered="true"
            card_view:rv_rippleDuration="200"
            android:id="@+id/rpJoin">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/rlJoin"
                android:background="#27bdf2">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="POST RIDE"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_centerInParent="true"
                    android:textColor="@android:color/white"/>






            </RelativeLayout>

        </com.andexert.library.RippleView>
    </RelativeLayout>




