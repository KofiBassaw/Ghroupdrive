<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/cvBuy"
    android:minWidth="500dp"
    android:orientation="vertical"
    android:background="@android:color/white">


<ImageView
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="20dp"
    android:src="@drawable/profileuser"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        android:text="Hello!"/>
    
    
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:textSize="16sp"
        android:textColor="#fe7903"
        android:layout_gravity="center_horizontal"
        android:text="@string/registerd"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:gravity="center_horizontal"
        android:layout_marginLeft="5dp"/>
    
    
    
    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/phoneswapingicon"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        android:text="@string/proccedtext"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:gravity="center_horizontal"
        android:layout_marginLeft="5dp"/>






    <LinearLayout
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <com.andexert.library.RippleView
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:rv_color="@color/white"
            card_view:rv_centered="true"
            android:layout_weight="50"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="20dp"
            card_view:rv_rippleDuration="200"
            android:id="@+id/rpCancel"
            android:layout_marginBottom="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/rlCancel"
                >
           <!-- android:background="@drawable/canceloval" -->

                    <TextView
                        android:id="@+id/tvTransparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CANCEL"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#fe7903"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"/>





            </RelativeLayout>

        </com.andexert.library.RippleView>


        <!--     android:background="@drawable/proceedoval" -->
        <com.andexert.library.RippleView
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:rv_color="@color/white"
            card_view:rv_centered="true"
            android:layout_weight="50"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="15dp"
            card_view:rv_rippleDuration="200"
            android:id="@+id/rpProceed"
            android:layout_marginBottom="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:id="@+id/rlProceed">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PROCEED"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"/>





            </RelativeLayout>

        </com.andexert.library.RippleView>


    </LinearLayout>

</LinearLayout>